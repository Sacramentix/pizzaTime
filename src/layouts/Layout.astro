---
import Logo from '../assets/logo.svg';
import { Icon } from 'astro-icon';

export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="@adventure_wiki">
		<meta name="twitter:title" content="Six Degrees of Wiki Adventure">
		<meta name="twitter:description" content="Shortest path between...">
		<meta name="twitter:image" content="https://og-six-degrees.wikiadventu.re/api/og?lang=fr&start=112661&end=4644629">
		<meta name="twitter:image:alt" content="Thumbnail from Wikipédia" />

		<meta property="og:type" content="website">
		<meta property="og:title" content="Six Degrees of Wiki Adventure">
		<meta property="og:description" content="Shortest path between...">
		<meta property="og:image" content="https://og-six-degrees.wikiadventu.re/api/og?lang=fr&start=112661&end=4644629">
		<meta property="og:image:alt" content="Thumbnail from Wikipédia" />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1><img src={Logo} alt="A pizza with a quarter left"> Pizza Time</h1>
			<nav>
				<a href="#" active-link>Home</a>
				<a href="#">Menu</a>
				<a href="#">Promo</a>
				<a href="#"><Icon name="ic:baseline-search" /></a>
				<a href="#"><Icon name="ph:shopping-cart-simple-bold" /></a>
				<a href="#" round-button>Sign in</a>
			</nav>
		</header>
		<slot />
	</body>
</html>
<style lang="scss" is:global>
@font-face {
  font-family: "Fira Sans";
  src: local("Fira Sans"), url("/fonts/FiraSans-Light.ttf") format("truetype");
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: "Fira Sans";
  src: local("Fira Sans"), url("/fonts/FiraSans-Regular.ttf") format("truetype");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: "Fira Sans";
  src: local("Fira Sans"), url("/fonts/FiraSans-Medium.ttf") format("truetype");
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: "Fira Sans";
  src: local("Fira Sans"), url("/fonts/FiraSans-SemiBold.ttf") format("truetype");
  font-weight: 600;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: "Fira Sans";
  src: local("Fira Sans"), url("/fonts/FiraSans-Bold.ttf") format("truetype");
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

html {
	font-family: "Fira Sans" ,system-ui, sans-serif;
	background-color: #fff;
}
[round-button] {
	background: #EC0000;
	color: #fff;
	padding: 10px 24px;
	text-transform: uppercase;
	font-size: 1.5rem;
	font-weight: 500;
	appearance: none;
	border: none;
	border-radius: 100vmax;
	text-decoration: none;
}
header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	min-height: 100px;
	padding: 0 100px;
	h1 {
		margin: 0;
		// vertical-align: middle;
		img {
			margin-top: -.4rem;
			vertical-align: middle;
		}
	}
	nav {
		display: flex;
		align-items: center;
		gap: 36px;
		[astro-icon] {
			color: #000;
			width: 1.5rem;
		}
		a {
			font-weight: 500;
			text-decoration: none;
			color: #000;
			&[active-link] {
				color: #EC0000;
			}
		}
	}
}
</style>
